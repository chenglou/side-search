totalWidth = 600px
totalHeightInPercent = 98
buttonWidth = 30px
buttonsImageURL = "icons/Small Row.png"


#side-search-tab
  visibility: hidden
  z-index: 2147483647
  border: 1px solid #000 !important
  width: totalWidth
  height: (totalHeightInPercent)%
  top: ((100 - totalHeightInPercent) / 2)%
  position: fixed
  right: -(totalWidth)
  -webkit-transition: all 0.4s ease-out
  /*    -webkit-transform: translate3d(-(totalWidth), 0, 0);
  */

#side-search-tab-content
  width: totalWidth - buttonWidth
  height: 100%
  background-color: #fff
  border: none

#side-search-navigation
  float: left
  width: 30px
  height: 100%
  background-color: gray;

  for i in 1 2 3 4 5
    button:nth-child({i})
      background-position: i * buttonWidth 0

#side-search-button-popout
  position: absolute
  bottom: 0

.side-search-button
  width: buttonWidth
  height: buttonWidth
  display: inline-block
  background: url(buttonsImageURL)
  outline: 1px solid red


button.enabled
  border: 1px solid #008000

button.disabled
  border: 1px solid #f00

